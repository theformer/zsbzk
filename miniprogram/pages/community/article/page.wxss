/* pages/home/article/page.wxss */
.nav-wrap{
  background: none;
}
.container{
  position: relative;
  height: 92vh;
  padding-bottom: 8vh;
}
.videoBox{
  position: relative;
  height: 100vh;
  background: #000000;
  overflow: hidden;
}
.videoBox .video-box{
  position: relative;
  width: 100%;
  height: 100vh;
}
.video-box .video-container{
  position: relative;
  width: 100%;
  height: 100vh;
}
.video-container .video-play {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 12;
}
.container .header{
  position: relative;
  color: #26292C;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 600;
}
.videoBox .video-title{
  position: fixed;
  width: 100%;
  color: #FFF;
  font-size: 32rpx;
  line-height: 40rpx;
  padding: 0 140rpx 0 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  width: 100%;
  white-space:normal;
  bottom: 21vh;
}
.videoBox .video-user{
  position: fixed;
  width: 100%;
  display: flex;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  bottom: 8vh;
}
.video-user .author-avater{
  position: relative;
  display: inline-block;
  width: 15%;
  min-height: 80rpx;
}
.video-user .author-avater image{
  position: absolute;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.video-user .author-userInfo .author-nickName{
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #FFF;
}
.video-comment-content{
  position: fixed;
  width:100%;
  height: 64rpx;
  font-size: 28rpx;
  color: #FFF;
  /* border-top: 2rpx solid #FFF; */
  bottom: 2vh;
}
.video-comment-content .input-comment{
  margin:0 30rpx;
  /* background: #27292D; */
  border-radius: 40rpx;
}
.video-btn{
  position: fixed;
  right: 33rpx;
  bottom: 12%;
  width: 80rpx;
  height: 35%;
  font-size: 24rpx;
  overflow: hidden;
}
.video-btn .btn-item{
  position: relative;
  float: left;
  text-align: center;
  width: 100%;
  margin-bottom: 50rpx;
}
.video-btn .btn-item .btn-icon{
  position: relative;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.btn-item .commentCount{
  position: relative;
  color: #FFF;
  font-size: 24rpx;
}

.container .author-box{
  position: relative;
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.author-box .author-avater{
  position: relative;
  display: inline-block;
  width: 15%;
  min-height: 80rpx;
}
.author-box .author-avater image{
  position: absolute;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.author-box .author-userInfo{
  position: relative;
  display: inline-block;
  width: 75%;
  min-height: 12vw;
}
.author-box .author-userInfo .author-nickName{
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #26292C;
}
.author-box .author-userInfo .author-createTime{
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #A9ACB0;
}
.author-box .author-attr{
  position: relative;
  display: inline-block;
  width: 10%;
}
.author-box .author-attr .label-attr{
  position: relative;
  color: #E70012;
  font-size: 24rpx;
  border: 1px solid #E70012;
  text-align: center;
}

.container .image-box{
  position: relative;
  width: 100%;
  padding-bottom: 20rpx;
}
.image-box .images-item{
  position: relative;
  width: 100%;
  height: 50vw;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.groups{
  position: relative;
  display: flex;
  margin:30rpx 0;
}
.groups-item{
  position: relative;
  flex: 1;
  margin: 10rpx;
  line-height: 74rpx;
  border:2rpx solid #999999;
  border-radius: 40rpx;
  text-align: center;
  
}
.groups-item .group-image{
  position: relative;
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}
.groups-item .group-text{
  position: relative;
  font-size: 24rpx;
  color: #26292C;
}
.user-comment{
  position: relative;
}
.user-comment .data-error{
  position: relative;
}
/* 评论框 */
.dialogue-bottom{
  position: fixed;
  width: 100%;
  height: 8vh;
  bottom: 0;
  background: #FFFFFF;
  box-shadow:0px 2px 10px 0px rgba(221,221,221,1);
  z-index: 2000;
}
.commentReplys-bottom{
  transition: all 0.4s ease;
  transform: translateY(400%);
}
.zan-dialog--show .commentReplys-bottom{
  transform: translateY(0);
}
.dialogue-bottom .input-comment{
  position: relative;
  height: 64rpx;
  display: inline-block;
  margin: 20rpx auto 20rpx 30rpx;
  width: 50%;
  background-color: #F1F1F1;
  border-radius: 40rpx;
  border: none; 
  vertical-align: middle;
}
.input-comment.commentReplyBottom{
  width: 65%;
}
.dialogue-bottom .input-comment.input-load{
  width: 66%;
}
.input-comment .input-content{
  position: relative;
  width: 100%;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 30rpx;
}
.content{
  position: relative;
  padding-bottom: 30rpx;
}


.dialogue-bottom .btn-box{
  position: relative;
  display: inline-flex;
  width: 45%;
  height: 100%;
  line-height: 8vh;
  justify-content: center;
  vertical-align: middle;
  float: right;
}
.dialogue-bottom .btn-box.commentReply-btn{
  width: 30%;
}
.dialogue-bottom .btn-box .btn-chat{
  position: relative;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin:auto;
}
.dialogue-bottom .btn-box .btn-share{
  position: relative;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin:auto;
}
.dialogue-bottom .btn-box .btn-praise{
  position: relative;
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin: auto;
}
.btn-box image{
  vertical-align: middle;
}

.comments-view.zan-dialog--show{
  position: fixed;
  display: block;
  width: 100%;
  height: 100%;
  z-index: 999;
  bottom: 8vh;
  transition: all 1s ease;
}

.commentReplys.zan-dialog--show{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1999;
  bottom: 8vh;
}
.dialogCover{
  position: absolute;
  display: none;
  width: 100%;
  height: 100vh;
  z-index: 998;
  background-color: #000000;
  opacity: 0.7;
  top: 0;
}
.zan-dialog--show .dialogCover{
  display: block;
}
.comment-container{
  position: fixed;
  width: 100%;
  height: 80vh;
  padding: 30rpx;
  bottom: 8vh;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background: #FFF;
  z-index: 1000;
  transform: translateY(400%);
  transition: all 0.4s ease;
}
.zan-dialog--show .comment-container{
  transform: translateY(0);
}
.chatting .comment-container.inputLoading{
  height: 60vh;
}

.comment-container .comment-top{
  position: relative;
  text-align: center;
  border-bottom: 1rpx solid #EDEFF2;
  line-height: 44rpx;
  padding-bottom: 20rpx;
}
.comment-top .comment-close{
  position: relative;
  float: left;
  width: 40rpx;
  height: 40rpx;
}
.comment-top .comment-header{
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  color: #26292C;
}
/* 评论内容 */
.comment-container .comment-body{
  position: relative;
  width: 100%;
  height: 100%;
  padding-bottom: 40rpx;
}
.comment-body .commentReplysParent{
  padding-bottom:20rpx;
  border-bottom: 1rpx solid #EDEFF2; 
}
.comment-body .otherUsercomment{
  position: relative;
  padding: 20rpx 0;
  color: #26292C;
  font-size: 28rpx;
}
.comment-item{
  position: relative;
  width: 100%;
  display: flex;
  margin-top:20rpx; 
  margin-bottom: 20rpx;
}
.comment-item .item-left{
  position: relative;
  display: inline-block;
  width: 15%;
  min-height: 12vw;
  margin-top: 25rpx;
}
.comment-item .item-left .message-avater{
  position: absolute;
  top: 0;
  width: 12vw;
  height: 12vw;
  border-radius: 50%;
  overflow: hidden;
}
.comment-item .item-right{
  position: relative;
  display: inline-block;
  width: 85%;
  min-height: 12vw;
}
.comment-item .item-header{
  position: relative;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  color: #E70012;
}
.comment-item .item-header .item-username{
  position: relative;
  display: inline-block;
  line-height: 10vw;
  font-size: 28rpx;
}
.comment-item .item-header .item-like{
  position: absolute;
  top:0;
  right: 0;
}
.comment-item .item-header .item-like .like-image{
  position: relative;
  display: inline-block;
  height: 36rpx;
  width: 36rpx;
  vertical-align: middle;
}
.comment-item .item-header .item-like .like-count{
  position: relative;
  display: inline-block;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #26292C;
  font-size: 28rpx;
}
.comment-item .item-header .item-like .like-count.like-active{
  color: #E70012;
}
.comment-item .item-content{
  position: relative;
  width: 100%;
  padding-right:20rpx;
  max-height: 200rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #26292C;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}
.comment-item .item-content .item-contentPName{
  color: #E70012;
}
.comment-item .item-date{
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
}

.comment-item .item-date .item-time{
  position: relative;
  display: inline-block;
  color: #A9ACB0;
  font-size: 26rpx;
}
.comment-item .item-date .item-speck{
  position: relative;
  display: inline-block;
  color: #A9ACB0;
  font-size: 26rpx;
  font-weight: bold;
  margin: 0 10rpx;
}
.comment-item .item-date .item-reply{
  position: relative;
  display: inline-block;
  color: #26292C;
  font-size: 26rpx;
}
.comment-item .item-date .item-reply-border{
  background-color: #EDEFF2;
  padding: 10rpx 20rpx;
  border-radius: 20px;
}
.commentReplys .comment-item .item-date .item-reply{
  background:no-repeat;
}

.comment-item .item-date .item-delete{
  position: relative;
  float: right;
  top: 5rpx;
  height: 44rpx;
  width: 100rpx;
}
.item-delete .item-delete-icon{
  position: relative;
  width: 60rpx;
  height: 44rpx;
  margin: 0 auto;
  vertical-align: middle;
}
.item-delete .item-delete-title{
  position: relative;
  line-height: 44rpx;
  text-align: center;
  width: 100rpx;
}
.comment-item .item-popover{
  position: absolute;
  width: 100%;
  bottom: 50rpx;
}
