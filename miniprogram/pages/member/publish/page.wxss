/* pages/member/publish/page.wxss */
.container{
  position: relative;
  padding:2vh;
  padding-bottom: 0rpx;
  background: #FFF;
  height: 100vh;
}

.top-nav{
  position: relative;
  margin: 0 80rpx;
  height: 7vh;
  border: 1px solid #E70012;
  border-radius: 7vh;
  overflow: hidden;
  line-height: 7vh;
  color: 28rpx;
}

.top-nav .nav-left{
  position: relative;
  width: 50%;
  color: #E70012;
}
.top-nav .nav-right{
  position: relative;
  width: 50%;
  color: #E70012;
}
.top-nav .nav-active{
  background-color: #E70012;
  color: #FFF;
  border: none;
  border-radius: 0;
}
.swiper-box {
  position: relative;
  display: block;
  width: 100%;
  height: 91vh;
}

.swiper-box swiper-item {
  overflow-y: auto;
}
swiper-item .item-scroll {
  position: relative;
  padding-bottom: 64px;
  height: 100%;
}
.item-modules {
  position: relative;
  height: 100%;
  white-space: nowrap;
  background: #fff;
  padding-top: 20rpx;
}

.post-item{
  position: relative;
  box-shadow:0px 2px 10px 0px rgba(233,233,233,1);
  border-radius:12px;
  padding: 24rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
}
.post-content{
  position: relative;
  width: 90%;
}
.post-content .post-title{
  position: relative;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  color: #26292C;
  width: 100%;
  margin: 10rpx 0;
  white-space:normal;
  font-size: 32rpx;
}
.post-content .post-time{
  position: relative;
  color: #A9ACB0;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.post-time .post-commentCount{
  margin-right: 20rpx;
}
.post-foot{
  position: relative;
  float: right;
  height: 100%;
  z-index: 100;
}
.post-foot .post-delete{
  position: relative;
  width: 60rpx;
  height: 44rpx;
  bottom: 34rpx;
}



.video-item{
  position: relative;
  display: block;
  float: left;
  width: 46%;
  margin: 0 2%;
  box-shadow:0px 4rpx 20rpx 0px rgba(238,238,238,1);
  border-radius:12rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.video-photo{
  position: relative;
  height: 200rpx;
}

.video-photo .poster-image{
  position: relative;
  z-index: 10;
}
.video-photo .video-layer{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
  top: 0;
  left: 0;
  z-index: 100;
}
.video-photo .video-icon{
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 101;
  width: 80rpx;
  height: 80rpx;
  opacity: 1;
}
.video-item .video-commentCount{
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  background-color: rgba(0,0,0,0.7);
  color: #FFF;
  z-index: 100;
}
.video-commentCount .video-message{
  position: relative;
  width: 18rpx;
  height: 18rpx;
  float: left;
  margin-left: 10rpx;
}
.video-commentCount .video-count{
  position: relative;
  font-size: 20rpx;
  float: right;
  margin-right:15rpx; 
}
.video-item .video-title{
  position: relative;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  color: #26292C;
  width: 100%;
  padding: 20rpx;
  white-space:normal;
  font-size: 32rpx;
}
.video-item .video-time{
  position: relative;
  margin: 20rpx;
  margin-top:0; 
  color: #A9ACB0;
  font-size: 22rpx;
}
.video-item .video-delete{
  position: absolute;
  right: 22rpx;
  width: 60rpx;
  height: 44rpx;
  bottom: 11rpx;
  z-index: 100;
}
.popModel{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1000;
}
.popModel .other-layer{
  position: relative;
  height: 100vh;
  width: 100vw;
  background: #000000;
  opacity: 0.4;
  z-index: 1001;
}
.popModel .okButtom{
  position: relative;
  bottom: 178rpx;
  height: 78rpx;
  line-height: 78rpx;
  width: 100%;
  font-size: 28rpx;
  background: #FFF;
  z-index: 1002;
  border-radius: 0;
}
.popModel .delButtom{
  position: relative;
  bottom: 158rpx;
  height: 78rpx;
  line-height: 78rpx;
  width: 100%;
  font-size: 28rpx;
  background: #FFF;
  z-index: 1002;
  border-radius: 0;
}