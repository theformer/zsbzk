/* pages/member/myComment/page.wxss */
page{
  background: #FFF;
}
.container{
  position: relative;
  padding-top:2vh;
  padding-bottom: 0rpx;
  background: #FFF;
  height: 100vh;
  font-size: 30rpx;
}
.item-scroll {
  position: relative;
  height: 100%;
}
.header-item{
  position: relative;
  height: 80rpx;
  width: 100%;
  background: #EFEEF3;
  color: #E70012;
  line-height: 80rpx;
  padding-left:20rpx;
}
.comment-item{
  position: relative;
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #EFEEF3;
}
.comment-item .comment-head{
  position: relative;
  float: left;
  width: 80rpx;
  height: 100%;
}

.comment-item .comment-head .comment-icon{
  position: relative;
  width: 40rpx;
  height: 40rpx;
  top: 0;
}

.comment-item .comment-body{
  position: relative;
  margin-left: 80rpx;
  width: 80%;
  height: 100%;
}
.comment-item .comment-body .comment-title{
  position: relative;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  color: #26292C;
  width: 100%;
  margin: 10rpx 0;
  white-space:normal;
}
.comment-item .comment-body .comment-type{
  position: relative;
  font-size: 28rpx;
  color: #A9ACB0;
}
.comment-item .comment-foot{
  position: relative;
  float: right;
  height: 100%;
}
.comment-item .comment-foot .comment-delete{
  position: relative;
  width: 60rpx;
  height: 44rpx;
  bottom: 33rpx;
}