.container{
  position: relative;
  padding:30rpx;
  background: #FFF;
  height: 100vh;
}
.item-box{
  position: relative;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 10px 0px rgba(233,233,233,1);
  border-radius:12px;
  margin-bottom: 30rpx;
}
.item-box .item-header{
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #EDEFF2;
  text-align: center;
  border-top-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
}
.item-header .item-title{
  position: relative;
  font-size: 28rpx;
  color: #26292C;
}
.item-title .line {
    display: inline-block;
    width: 72rpx;
    border-top: 1rpx solid #26292C;
    vertical-align: middle;
}
.line-left{
  margin-right: 20rpx;
}
.line-right{
  margin-left: 20rpx;
}

.item-content{
  position: relative;
  padding: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #26292C;
}