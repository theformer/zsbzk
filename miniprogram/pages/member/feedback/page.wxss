/* pages/member/feedback/feedback.wxss */
page{
  background-color: #FFF;
  height: 100vh;
}
.page{
  margin: 20rpx;
}
.heading{
  color: #26292C;
  font-size: 28rpx;
  margin-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.textarea-box{
  position: relative;
  background-color: #fff;
  box-shadow:0px 0px 10px 0px rgba(221,221,221,0.7);
  padding: 20rpx;
  border-radius: 20rpx;
}
.errorContent{
  position: relative;
  width: 100%;
  font-size: 24rpx;
}

.submit{
  margin-top: 100rpx;
  border-radius: 40rpx;
  background-color:#E70012;
  color: #FFF;
}