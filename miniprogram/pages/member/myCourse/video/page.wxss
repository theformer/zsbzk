/* 弹框样式 start */

.exercise-index-mask {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 10000;
  opacity: 0.7;
}

.exercise-index-modalDlg {
  width: 70%;
  height: auto;
  left: 0;
  position: fixed;
  z-index: 10001;
  margin: 40vh 15%;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  top: 0;
}

.exercise-index-modalDlg button {
  width: 50%;
  color: #FF3234;
  background-color: #fff;
  font-size: 16px;
  border: none;
  border-radius: 0rpx;
}

.exercise-index-modalDlg-view {
  border-top: 1px solid #DEDEDE;
  width: 100%;
  height: auto;
  margin-top: 10%;
  display: flex;
  padding-top: 10rpx;
}

.exercise-index-modalDlg-view .btn-left{
  border-right: 1px solid #DEDEDE;
}
/* 弹框样式 end  */