page{
  background: #FFF;
}
.container{
  position: relative;
  padding:30rpx;
  padding-bottom: 0rpx;
  background: #FFF;
  height: 100vh;
}
.swiper-box {
  position: relative;
  display: block;
  width: 100%;
  height: 91vh;
}
.swiper-box swiper-item {
  overflow-y: auto;
}
.item-scroll {
  position: relative;
  height: 100%;
}
.top-nav{
  position: relative;
  margin: 0 120rpx;
  height: 80rpx;
  border: 1px solid #E70012;
  border-radius: 40rpx;
  overflow: hidden;
  line-height: 80rpx;
  color: 28rpx;
}

.top-nav .nav-left{
  position: relative;
  width: 50%;
  color: #E70012;
}
.top-nav .nav-right{
  position: relative;
  width: 50%;
  color: #E70012;
}
.top-nav .nav-active{
  background-color: #E70012;
  color: #FFF;
  border: none;
  border-radius: 0;
}
.item-box{
  position: relative;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 10px 0px rgba(233,233,233,1);
  border-radius:12px;
  margin:30rpx 0;
}
.item-box .item-header{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #EDEFF2;
  text-align: left;
  border-top-right-radius: 12rpx;
  border-top-left-radius: 12rpx;
  padding: 0 30rpx;
}
.item-title{
  position: relative;
  display: inline-block;
  font-size: 28rpx;
  color: #26292C;
}
.item-content{
  position: relative;
  float: right;
  font-size: 28rpx;
  color: #E70012;
}
.item-cell{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #EDEFF2;
}
.item-box .item-cell:last-child{
  border: none;
}