/* miniprogram/pages/home/province/page.wxss */
page{
  background: #FFF;
  padding-top: 30rpx;
}
.searchLetter {
  position: fixed;
  right: 20rpx;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}
.provinceName{
  position: relative;
  padding-left: 35rpx;
}
.header{
  position: relative;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin: 30rpx 0;
}
.provinceName .thisCityName{
  position: relative;
  height: 100%;
  width: 26vw;
  text-align: center;
  line-height: 57rpx;
  font-size: 28rpx;
  color: #FFF;
  background: #FF3233;
  border-radius: 6rpx;

}
.touchClass {
  padding-top: 46rpx;
}
.letter-item{
  margin-top: 12rpx;
  color:#FF3233;
  font-size:26rpx;
}


.selection{
  position: relative;
  padding:0 70rpx 0 30rpx;
}
.item_letter{
  margin-bottom: 30rpx;
  margin-left: 2%;
}
.city_initials{
  position: relative;
  color: #FFF;
  background-color: #FF3233;
  border-radius: 50%;
  font-size: 28rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
}
.city{
  position: relative;
  overflow: hidden;
  
}
.item_city{
  position: relative;
  display: block;
  margin: auto;
  width: 33.3%;
  height: 57rpx;
  text-align: center;
  margin-bottom: 35rpx;
  float: left;
}
.item_city .city_name{
  position: relative;
  height: 100%;
  width: 26vw;
  margin: auto;
  line-height: 57rpx;
  font-size: 28rpx;
  color: #A9ACB0;
  border:1rpx solid #D2D4D4;
  border-radius: 6rpx;
} 

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}