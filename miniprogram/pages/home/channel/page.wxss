/* pages/home/channel/page.wxss */
.container{
  position: relative;
  padding: 0 30rpx;
  height: 100vh;
  background: #FFF;
}
.header{
  position: relative;
  padding: 10rpx 0;
  vertical-align: bottom;
}
.header .title{
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  color: #26292C;
}
.header .label{
  position: relative;
  display: inline-block;
  font-size: 24rpx;
  color: #A9ACB0;
  vertical-align: bottom;
  margin-left: 20rpx;
}
.selected-ul{
  position: relative;
  padding: 20rpx 0;
  overflow: hidden;
  
}
.select-ul{
  position: relative;
  padding: 20rpx 0;
}
.selected-ul .selected-li{
  position: relative;
  display: block;
  margin: auto;
  width: 33.3%;
  height: 57rpx;
  text-align: center;
  margin-bottom: 35rpx;
  float: left;
}
.selected-ul .selected-li .grid-box{
  position: relative;
  height: 100%;
  width: 26vw;
  margin: auto;
  line-height: 57rpx;
  font-size: 26rpx;
  color: #E70012;
  background-color: #EDEFF2;
}
.selected-ul .selected-li .close{
  position: absolute;
  top: -20rpx;
  right: 0;
  width: 28rpx;
  height: 28rpx;
}
.select-ul .select-li{
  position: relative;
  display: block;
  margin: auto;
  width: 33.3%;
  height: 57rpx;
  text-align: center;
  margin-bottom: 35rpx;
  float: left;
}
.select-ul .select-li .grid-box{
  position: relative;
  height: 100%;
  width: 26vw;
  margin: auto;
  line-height: 57rpx;
  font-size: 26rpx;
  color: #26292C;
  background-color: #EDEFF2;
}
.select-ul .select-li .add{
  position: relative;
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.save-btn{
  position: fixed;
  display: block;
  left: 0;
  right: 0;
  bottom: 50rpx;
  margin: auto;
  width: 85vw;
  height: 80rpx;
  line-height: 80rpx;
  color: #FFF;
  font-size: 30rpx;
  background-color: #E70012;
  padding: 0;
  border-radius: 40rpx;
}