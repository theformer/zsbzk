.popover{
  position: absolute;
  display: block;
  margin: 0 30rpx;
  padding: 0 24rpx;
  left: 0;
  right: 0;
  background: #FFF;
  z-index: 1002;
  border-radius: 10rpx;
}
.popover.comment.top{
  bottom: 60rpx;
}
.popover.info.top{
  bottom: 122rpx;
}
.popover.comment{
  margin: 0;
}
.popover.comment.bottom{
  top: 30rpx;
}
.popover.info.bottom{
  top: 122rpx;
}
.popover-scroll{
  position: relative;
  width: 100%;
  height: 420rpx;
}
.popover .porpver-item{
  position: relative;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #242424;
  border-bottom: 1rpx solid #EDEDED;
}
.popover .porpver-item:last-child{
  border-bottom:none;
}
.popover .arrow{
  position: absolute;
  display: block;
  width: 0;
  height: 0;
  border-color: transparent;
  border-style: solid;
}

.top .arrow{
  bottom: -35rpx;
  border-top: 30px solid #FFF;
  border-left: 30px solid transparent;
}
.bottom .arrow{
  top: -35rpx;
  border-bottom: 30px solid #FFF;
  border-left: 30px solid transparent;
}
