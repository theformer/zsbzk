/* components/fullscreen-video/component.wxss */
.video-container{
  position: relative;
  width: 100%;
  height: 50vw;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  z-index: 99;
}
.video-box{
  position: relative;
  width: 100%;
  height: 50vw;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  z-index: 100;
}
.video-box .video-image{
  position: relative;
  height: 100%;
  width: 100%;
}
.video-box .video-play {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 12;
}
.img-btn{
  border: none;
  padding: 0;
  margin: 0;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: none;
  line-height:unset;
  overflow:visible;
}
.img-btn::after{
  border: none;
  border-radius: 0;
}
.image{
  max-width: 100%;
  max-height: 100%;
  display: inline-block;
  position: relative;
}
  