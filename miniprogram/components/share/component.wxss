/** 分享框 */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
.wechat-dialog .wechat-dialog__mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: rgb(0, 0, 0); /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  opacity: 0.8;
}
.wechat-dialog .wechat-box{
  position: fixed;
  top: 30%;
  left: 15%;
  right: 15%;
  bottom:45%;
  background: #fff;
  border: 10rpx;
  z-index: 101;
}
.wechat-dialog .wechat-box .wechat-close{
  position: relative;
  bottom: -100rpx;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}
.wechat-close .image{
  width: 100%;
  height: 100%;
}
.wechat-tips{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  margin-top: 10rpx;
  text-align: center;
}
.wechat-tips .border-line{
  position: relative;
  display: inline-block;
  width:160rpx;
  border-bottom: 1rpx solid #DDDDDD;
  bottom: 10rpx;
  margin: 0 20rpx;
}
.border-line::after{
  position: relative;
  border-bottom: 1px solid #DDDDDD;
  content: " ";
  
}
.wechat-share{
  position: relative;
  display: flex;
  align-items:center;
  margin-top: 40rpx;
}
.wechat-share .wechat-item{
  position: relative;
  flex: 1;
  text-align: center;

}
.wechat-item .wechat-img{
  position: relative;
  display: block;
  margin: 0 auto;
  width: 96rpx;
  height: 96rpx;
}
.wechat-item .wechat-title{
  position: relative;
  font-size: 28rpx;
  color: #666666;
  margin-top: 20rpx;
}
.img-btn{
  border: none;
  padding: 0;
  margin: 0;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: none;
  line-height:unset;
  overflow:visible;
}
.img-btn::after{
  border: none;
  border-radius: 0;
}
