/**app.wxss**/
@import "static/font/iconfont.wxss";
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "utils/wxParse/wxParse.wxss";
page{
  background: #fff;
  height: 100vh;
}

.img-btn{
  border: none;
  padding: 0;
  margin: 0;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: none;
  line-height:unset;
  overflow:visible;
}
.img-btn::after{
  border: none;
  border-radius: 0;
}

comment_message{
  position: fixed;
  z-index: 10000;
  top: 0;
  height: 100vh;
  width: 100%;
  right: 0;
}
.messageShow{
  display: none;
}

 .data-error{
  position: absolute;
  margin: auto;
  left:0; 
  right:0;
  top: 0;
  bottom:0;
  width: 80vw;
  height: 65vw;
}
.data-error .error-tips{
  position: absolute;
  top: 80%;
  color: #A9ACB0;
  font-size: 36rpx;
  width: 100%;
  text-align: center;
}

.noscroll {
  top: 0px !important;
  left: 0px !important;
  width: 100% !important;
  height: 100% !important;
  overflow: hidden !important;
  position: fixed !important;
  z-index: 0 !important;
}

.shadow{
  box-shadow:0px 0px 10px 0px #EDEFF2;
}

.icon-line::after{
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  margin: auto;
  width: 2px;
  height: 16px;
  right: -11px;
  background: #D8D8D8;
}
.inner-elem{
  position: relative;
  display: inline-block;
  top: -2rpx;
}
.relative{
  position: relative;
}
/* 加载动画样式 */
.load-modal{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 19999;
}
.load-modal .load-box{
  position: absolute;
  margin: auto;
  top: 30%;
  width: 330rpx;
  height: 330rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 2.4em;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background-color: #FFF;
  left: 0;
  right: 0;
  z-index: 1000;
}
.load-modal .load-img{
  position: relative;
  width: 236rpx;
  height: 236rpx;
  margin: auto;
  margin-top:30rpx;
}
.load-modal .load-text{
  position: relative;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
}
.load-modal .altremodel{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.3;
  z-index: 98;
}

/* 弹框样式 start */

.exercise-index-mask {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 10000;
  opacity: 0.7;
}

.exercise-index-modalDlg {
  width: 70%;
  height: auto;
  left: 0;
  top: 0;
  position: fixed;
  z-index: 10001;
  margin: 40vh 15%;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.exercise-index-modalDlg button {
  width: 50%;
  color: #FF3234;
  background-color: #fff;
  font-size: 16px;
  border: none;
  border-radius: 0rpx;
}

.exercise-index-modalDlg-view {
  border-top: 1px solid #DEDEDE;
  width: 100%;
  height: auto;
  margin-top: 10%;
  display: flex;
  padding-top: 10rpx;
}

.exercise-index-modalDlg-view .btn-left{
  border-right: 1px solid #DEDEDE;
}
/* 弹框样式 end  */

/**
  * 自定义头部样式
*/

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
  height: 9vh;
}
.nav-wrap .nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  bottom: 10px;
  right: 0;
  margin: auto;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 12vh;
}

.nav-wrap .nav-back{
  position: absolute;
  font-size: 40rpx;
  bottom: 10px;
  left: 20rpx;
}

.cu-icon{
  font-variant: small-caps;
  margin: 0;
  padding: 0;
  display: inline-flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  position: relative;
  width: 64rpx;
  height: 64rpx;
  background-size: cover;
  background-position: center;
  vertical-align: middle;
  font-size: 1.5em;
}